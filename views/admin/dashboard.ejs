<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Bylaws Amendment Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/mobile-menu.css">
  <style>
    body {
      background: #f5f7fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .admin-header {
      background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
      color: white;
      padding: 2rem 0;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      margin-bottom: 2rem;
    }

    .stat-card {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      text-align: center;
      transition: transform 0.3s;
    }

    .stat-card:hover {
      transform: translateY(-5px);
    }

    .stat-card .icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .stat-card .value {
      font-size: 2.5rem;
      font-weight: bold;
      margin: 0;
    }

    .stat-card .label {
      color: #6c757d;
      font-size: 1rem;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .org-table {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      margin-top: 2rem;
    }

    .org-row {
      border-bottom: 1px solid #e9ecef;
      padding: 1rem 0;
      transition: background 0.2s;
    }

    .org-row:hover {
      background: #f8f9fa;
    }

    .org-row:last-child {
      border-bottom: none;
    }

    .org-name {
      font-size: 1.2rem;
      font-weight: 600;
      color: #333;
    }

    .org-stats {
      display: flex;
      gap: 1.5rem;
      margin-top: 0.5rem;
    }

    .org-stat {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #6c757d;
      font-size: 0.9rem;
    }

    .action-buttons {
      display: flex;
      gap: 0.5rem;
    }

    .badge-custom {
      padding: 0.5rem 1rem;
      border-radius: 20px;
      font-weight: 600;
    }
  </style>
</head>
<body>
  <div class="admin-header">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="mb-0">
            <i class="bi bi-shield-lock"></i> Admin Dashboard
          </h1>
          <p class="mb-0 mt-2">System-wide organization management</p>
        </div>
        <div class="d-flex align-items-center gap-3">
          <!-- Role Badge -->
          <% if (typeof user !== 'undefined' && user && user.is_global_admin) { %>
            <span class="badge bg-light text-danger border border-danger" style="padding: 0.5rem 1rem; font-size: 0.9rem;">
              <i class="bi bi-shield-fill-check"></i> Global Admin Mode
            </span>
          <% } %>

          <div>
            <a href="/auth/select" class="btn btn-light me-2">
              <i class="bi bi-arrow-left"></i> Back to Selection
            </a>
            <a href="/auth/admin" class="btn btn-outline-light">
              <i class="bi bi-box-arrow-right"></i> Exit Admin Mode
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <!-- Quick Actions -->
    <div class="row g-3 mb-4">
      <div class="col-md-12">
        <div class="content-card" style="background: white; border-radius: 15px; padding: 1.5rem; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
          <h5 class="mb-3">Quick Actions</h5>
          <div class="d-flex gap-2 flex-wrap">
            <a href="/admin/workflows" class="btn btn-outline-primary">
              <i class="bi bi-diagram-3"></i> Manage Workflows
            </a>
            <a href="/admin/users" class="btn btn-outline-info">
              <i class="bi bi-people"></i> Manage Members
            </a>
            <a href="/setup" class="btn btn-outline-success">
              <i class="bi bi-plus-circle"></i> Add Organization
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- System Statistics -->
    <div class="row g-4 mb-4">
      <div class="col-md-3">
        <div class="stat-card">
          <div class="icon text-primary">
            <i class="bi bi-building"></i>
          </div>
          <p class="value text-primary"><%= systemStats.totalOrganizations %></p>
          <p class="label">Organizations</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <div class="icon text-success">
            <i class="bi bi-file-earmark-text"></i>
          </div>
          <p class="value text-success"><%= systemStats.totalDocuments %></p>
          <p class="label">Documents</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <div class="icon text-warning">
            <i class="bi bi-folder"></i>
          </div>
          <p class="value text-warning"><%= systemStats.totalSections %></p>
          <p class="label">Sections</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <div class="icon text-info">
            <i class="bi bi-lightbulb"></i>
          </div>
          <p class="value text-info"><%= systemStats.totalSuggestions %></p>
          <p class="label">Suggestions</p>
        </div>
      </div>
    </div>

    <!-- Organizations Table -->
    <div class="org-table">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">All Organizations</h3>
        <a href="/setup" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> Add New Organization
        </a>
      </div>

      <% if (organizations && organizations.length > 0) { %>
        <% organizations.forEach(org => { %>
          <div class="org-row">
            <div class="row align-items-center">
              <div class="col-md-6">
                <div class="org-name">
                  <%= org.name %>
                  <% if (currentOrgId === org.id) { %>
                    <span class="badge bg-success ms-2">Current</span>
                  <% } %>
                </div>
                <div class="org-stats">
                  <div class="org-stat">
                    <i class="bi bi-file-earmark-text"></i>
                    <span><%= org.stats.documents %> documents</span>
                  </div>
                  <div class="org-stat">
                    <i class="bi bi-folder"></i>
                    <span><%= org.stats.sections %> sections</span>
                  </div>
                  <div class="org-stat">
                    <i class="bi bi-lightbulb"></i>
                    <span><%= org.stats.suggestions %> suggestions</span>
                  </div>
                  <div class="org-stat">
                    <i class="bi bi-people"></i>
                    <span><%= org.stats.users %> users</span>
                  </div>
                </div>
                <small class="text-muted">
                  Created <%= new Date(org.created_at).toLocaleDateString() %>
                </small>
              </div>
              <div class="col-md-6 text-end">
                <div class="action-buttons justify-content-end">
                  <a href="/auth/switch/<%= org.id %>" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-box-arrow-in-right"></i> Access Dashboard
                  </a>
                  <a href="/admin/organization/<%= org.id %>" class="btn btn-sm btn-outline-info">
                    <i class="bi bi-eye"></i> View Details
                  </a>
                  <button class="btn btn-sm btn-outline-danger" onclick="deleteOrganization('<%= org.id %>', '<%= org.name %>')">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="text-center text-muted py-5">
          <i class="bi bi-inbox" style="font-size: 4rem;"></i>
          <p class="mt-3">No organizations found</p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Delete Organization Confirmation Modal -->
  <div class="modal fade" id="deleteOrgModal" tabindex="-1" aria-labelledby="deleteOrgModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title" id="deleteOrgModalLabel">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Organization
          </h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Warning:</strong> This action is irreversible!
          </div>
          <p>You are about to delete: <strong id="deleteOrgName"></strong></p>
          <p class="text-danger">This will permanently remove:</p>
          <ul class="text-danger">
            <li>All documents and sections</li>
            <li>All suggestions and approvals</li>
            <li>All user associations</li>
            <li>All workflow history</li>
          </ul>
          <div class="mt-3">
            <label for="deleteConfirmText" class="form-label">
              Type <strong>DELETE</strong> to confirm:
              <span class="text-danger">*</span>
            </label>
            <input
              type="text"
              class="form-control"
              id="deleteConfirmText"
              placeholder="Type DELETE here"
              required
            />
            <div class="invalid-feedback">You must type DELETE to confirm</div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" id="confirmDeleteBtn" disabled>
            <i class="bi bi-trash me-1"></i>Delete Organization
          </button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let currentDeleteOrgId = null;
    let currentDeleteOrgName = null;

    function deleteOrganization(orgId, orgName) {
      currentDeleteOrgId = orgId;
      currentDeleteOrgName = orgName;

      // Set organization name in modal
      document.getElementById('deleteOrgName').textContent = orgName;

      // Reset confirmation input
      const confirmInput = document.getElementById('deleteConfirmText');
      confirmInput.value = '';
      confirmInput.classList.remove('is-invalid');
      document.getElementById('confirmDeleteBtn').disabled = true;

      // Show modal
      const modal = new bootstrap.Modal(document.getElementById('deleteOrgModal'));
      modal.show();
    }

    // Enable delete button only when user types DELETE
    document.getElementById('deleteConfirmText').addEventListener('input', function() {
      const confirmBtn = document.getElementById('confirmDeleteBtn');
      const isValid = this.value === 'DELETE';
      confirmBtn.disabled = !isValid;

      if (isValid) {
        this.classList.remove('is-invalid');
      }
    });

    // Handle delete confirmation
    document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
      const confirmInput = document.getElementById('deleteConfirmText');

      if (confirmInput.value !== 'DELETE') {
        confirmInput.classList.add('is-invalid');
        return;
      }

      // Disable button to prevent double-clicks
      this.disabled = true;
      this.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';

      fetch(`/admin/organization/${currentDeleteOrgId}/delete`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ confirm: 'DELETE' })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          // Show success message
          const successAlert = document.createElement('div');
          successAlert.className = 'alert alert-success alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3';
          successAlert.style.zIndex = '9999';
          successAlert.innerHTML = `
            <i class="bi bi-check-circle me-2"></i>
            Organization "${currentDeleteOrgName}" deleted successfully
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          `;
          document.body.appendChild(successAlert);

          // Reload page after 1 second
          setTimeout(() => location.reload(), 1000);
        } else {
          alert('Error: ' + data.error);
          this.disabled = false;
          this.innerHTML = '<i class="bi bi-trash me-1"></i>Delete Organization';
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error deleting organization');
        this.disabled = false;
        this.innerHTML = '<i class="bi bi-trash me-1"></i>Delete Organization';
      });
    });
  </script>
  <script src="/js/mobile-menu.js"></script>
</body>
</html>
