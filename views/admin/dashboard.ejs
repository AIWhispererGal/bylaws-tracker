<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Bylaws Amendment Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    body {
      background: #f5f7fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .admin-header {
      background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
      color: white;
      padding: 2rem 0;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      margin-bottom: 2rem;
    }

    .stat-card {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      text-align: center;
      transition: transform 0.3s;
    }

    .stat-card:hover {
      transform: translateY(-5px);
    }

    .stat-card .icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .stat-card .value {
      font-size: 2.5rem;
      font-weight: bold;
      margin: 0;
    }

    .stat-card .label {
      color: #6c757d;
      font-size: 1rem;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .org-table {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      margin-top: 2rem;
    }

    .org-row {
      border-bottom: 1px solid #e9ecef;
      padding: 1rem 0;
      transition: background 0.2s;
    }

    .org-row:hover {
      background: #f8f9fa;
    }

    .org-row:last-child {
      border-bottom: none;
    }

    .org-name {
      font-size: 1.2rem;
      font-weight: 600;
      color: #333;
    }

    .org-stats {
      display: flex;
      gap: 1.5rem;
      margin-top: 0.5rem;
    }

    .org-stat {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #6c757d;
      font-size: 0.9rem;
    }

    .action-buttons {
      display: flex;
      gap: 0.5rem;
    }

    .badge-custom {
      padding: 0.5rem 1rem;
      border-radius: 20px;
      font-weight: 600;
    }
  </style>
</head>
<body>
  <div class="admin-header">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="mb-0">
            <i class="bi bi-shield-lock"></i> Admin Dashboard
          </h1>
          <p class="mb-0 mt-2">System-wide organization management</p>
        </div>
        <div>
          <a href="/auth/select" class="btn btn-light me-2">
            <i class="bi bi-arrow-left"></i> Back to Selection
          </a>
          <a href="/auth/admin" class="btn btn-outline-light">
            <i class="bi bi-box-arrow-right"></i> Exit Admin Mode
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <!-- Quick Actions -->
    <div class="row g-3 mb-4">
      <div class="col-md-12">
        <div class="content-card" style="background: white; border-radius: 15px; padding: 1.5rem; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
          <h5 class="mb-3">Quick Actions</h5>
          <div class="d-flex gap-2 flex-wrap">
            <a href="/admin/workflows" class="btn btn-outline-primary">
              <i class="bi bi-diagram-3"></i> Manage Workflows
            </a>
            <a href="/admin/users" class="btn btn-outline-info">
              <i class="bi bi-people"></i> Manage Users
            </a>
            <a href="/setup" class="btn btn-outline-success">
              <i class="bi bi-plus-circle"></i> Add Organization
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- System Statistics -->
    <div class="row g-4 mb-4">
      <div class="col-md-3">
        <div class="stat-card">
          <div class="icon text-primary">
            <i class="bi bi-building"></i>
          </div>
          <p class="value text-primary"><%= systemStats.totalOrganizations %></p>
          <p class="label">Organizations</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <div class="icon text-success">
            <i class="bi bi-file-earmark-text"></i>
          </div>
          <p class="value text-success"><%= systemStats.totalDocuments %></p>
          <p class="label">Documents</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <div class="icon text-warning">
            <i class="bi bi-folder"></i>
          </div>
          <p class="value text-warning"><%= systemStats.totalSections %></p>
          <p class="label">Sections</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <div class="icon text-info">
            <i class="bi bi-lightbulb"></i>
          </div>
          <p class="value text-info"><%= systemStats.totalSuggestions %></p>
          <p class="label">Suggestions</p>
        </div>
      </div>
    </div>

    <!-- Organizations Table -->
    <div class="org-table">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">All Organizations</h3>
        <a href="/setup" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> Add New Organization
        </a>
      </div>

      <% if (organizations && organizations.length > 0) { %>
        <% organizations.forEach(org => { %>
          <div class="org-row">
            <div class="row align-items-center">
              <div class="col-md-6">
                <div class="org-name">
                  <%= org.name %>
                  <% if (currentOrgId === org.id) { %>
                    <span class="badge bg-success ms-2">Current</span>
                  <% } %>
                </div>
                <div class="org-stats">
                  <div class="org-stat">
                    <i class="bi bi-file-earmark-text"></i>
                    <span><%= org.stats.documents %> documents</span>
                  </div>
                  <div class="org-stat">
                    <i class="bi bi-folder"></i>
                    <span><%= org.stats.sections %> sections</span>
                  </div>
                  <div class="org-stat">
                    <i class="bi bi-lightbulb"></i>
                    <span><%= org.stats.suggestions %> suggestions</span>
                  </div>
                  <div class="org-stat">
                    <i class="bi bi-people"></i>
                    <span><%= org.stats.users %> users</span>
                  </div>
                </div>
                <small class="text-muted">
                  Created <%= new Date(org.created_at).toLocaleDateString() %>
                </small>
              </div>
              <div class="col-md-6 text-end">
                <div class="action-buttons justify-content-end">
                  <a href="/auth/switch/<%= org.id %>" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-box-arrow-in-right"></i> Access Dashboard
                  </a>
                  <a href="/admin/organization/<%= org.id %>" class="btn btn-sm btn-outline-info">
                    <i class="bi bi-eye"></i> View Details
                  </a>
                  <button class="btn btn-sm btn-outline-danger" onclick="deleteOrganization('<%= org.id %>', '<%= org.name %>')">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="text-center text-muted py-5">
          <i class="bi bi-inbox" style="font-size: 4rem;"></i>
          <p class="mt-3">No organizations found</p>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    function deleteOrganization(orgId, orgName) {
      if (!confirm(`Are you sure you want to delete "${orgName}"?\n\nThis action cannot be undone and will remove all associated data.`)) {
        return;
      }

      const confirmText = prompt('Type "DELETE" to confirm deletion:');
      if (confirmText !== 'DELETE') {
        alert('Deletion cancelled');
        return;
      }

      fetch(`/admin/organization/${orgId}/delete`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ confirm: 'DELETE' })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert('Organization deleted successfully');
          location.reload();
        } else {
          alert('Error: ' + data.error);
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error deleting organization');
      });
    }
  </script>
</body>
</html>
