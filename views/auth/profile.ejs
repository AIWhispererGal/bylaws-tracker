<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Bylaws Tool</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2>
            <i class="bi bi-person-circle"></i>
            User Profile
          </h2>
          <a href="/dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
          </a>
        </div>

        <!-- Profile Card -->
        <div class="card shadow">
          <div class="card-body p-4">
            <!-- User Information -->
            <h4 class="card-title mb-4">Account Information</h4>

            <div class="row mb-3">
              <div class="col-sm-4"><strong>Name:</strong></div>
              <div class="col-sm-8"><%= user.full_name || user.name || 'Not set' %></div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-4"><strong>Email:</strong></div>
              <div class="col-sm-8"><%= user.email %></div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-4"><strong>User ID:</strong></div>
              <div class="col-sm-8"><code><%= user.id %></code></div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-4"><strong>Member Since:</strong></div>
              <div class="col-sm-8">
                <%= user.created_at ? new Date(user.created_at).toLocaleDateString() : 'Unknown' %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-4"><strong>Last Login:</strong></div>
              <div class="col-sm-8">
                <%= user.last_login ? new Date(user.last_login).toLocaleString() : 'Unknown' %>
              </div>
            </div>

            <hr class="my-4">

            <!-- Organizations -->
            <h4 class="card-title mb-3">Organizations</h4>

            <% if (organizations && organizations.length > 0) { %>
              <div class="list-group">
                <% organizations.forEach(org => { %>
                  <div class="list-group-item <%= org.organizations.id === currentOrgId ? 'active' : '' %>">
                    <div class="d-flex w-100 justify-content-between">
                      <h6 class="mb-1"><%= org.organizations.name %></h6>
                      <small>
                        <% if (org.is_global_admin) { %>
                          <span class="badge bg-danger">Global Admin</span>
                        <% } else { %>
                          <span class="badge <%= org.role === 'owner' || org.role === 'org_admin' ? 'bg-primary' : org.role === 'member' ? 'bg-success' : 'bg-secondary' %>">
                            <%= org.role === 'org_admin' ? 'Org Admin' : org.role.charAt(0).toUpperCase() + org.role.slice(1) %>
                          </span>
                        <% } %>
                      </small>
                    </div>
                    <p class="mb-1 text-muted"><%= org.organizations.organization_type || 'Organization' %></p>
                    <% if (org.organizations.id === currentOrgId) { %>
                      <small class="text-white-50">Currently active</small>
                    <% } else { %>
                      <a href="/auth/switch/<%= org.organizations.id %>" class="btn btn-sm btn-outline-primary mt-2">Switch to this org</a>
                    <% } %>
                  </div>
                <% }); %>
              </div>
            <% } else { %>
              <p class="text-muted">You are not a member of any organizations yet.</p>
            <% } %>

            <hr class="my-4">

            <!-- Actions -->
            <div class="d-flex justify-content-between">
              <a href="/auth/logout" class="btn btn-outline-danger">
                <i class="bi bi-box-arrow-right"></i> Logout
              </a>
              <a href="/dashboard" class="btn btn-primary">
                <i class="bi bi-speedometer2"></i> Go to Dashboard
              </a>
            </div>
          </div>
        </div>

        <!-- Security Notice -->
        <div class="alert alert-info mt-3">
          <strong>Security Tip:</strong> Keep your password secure and never share your account credentials.
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
